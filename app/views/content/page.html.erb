<div class="row-fluid">
	<div class="span12">
		<table class="table table-striped table-bordered table-hover table-condensed">
			<thead>
				<tr>
					<th>时间</th>
					<th>标签</th>
					<th>名称</th>
					<th>容量</th>
					<th>下载</th>
					<th>下载次数</th>
				</tr>
			</thead>
			<tbody>
				<% @videos.each do |video| %>
				<tr>
					<td><%=video.createdtime.strftime("%H:%M")%></td>
					<td><span class="label label-success"><%=video.tag%></span></td>
					<td><a href="/view/<%=video.id%>.html" target="_blank"><%=video.name%></a></td>
					<td><%=video.filesize%></td>
					<td></td>
					<td><%=video.download%></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<%= will_paginate @videos %>
	</div>
</div>
